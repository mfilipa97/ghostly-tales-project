<h1>Movies</h1>
<hr>
<div class="row">
  {{#each stories}}
    <div class="col-md-4 mb-5">
      <div class="card" style="width: 18rem;">
        <img src="{{this.imgUrl}}" class="card-img-top" alt="{{this.title}}">
        <div class="card-body">
          <h5 class="card-title">TITLE: {{this.title}}</h5>
          <p class="card-text">DESCRIPTION: {{this.description}}</p>
           <p class="card-text">AUTHOR: {{this.author.username}}</p>
          <a href="/story/{{this._id}}">Check out the story</a>
          <a href="/stories/{{id}}/edit" class="btn btn-primary">Edit</a>
       </div>
      </div>
    </div>
  {{else}}
    <p>There are no stories yet!</p>
  {{/each}}
  <hr/>
</div>
